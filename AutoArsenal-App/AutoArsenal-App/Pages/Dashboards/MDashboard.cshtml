@page
@model DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">
