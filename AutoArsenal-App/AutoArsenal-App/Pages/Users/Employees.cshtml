                                </select>
                                <label for="Country">Country</label>
                                <p class="invalid" id="countryError"></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <!-- Salary -->
                            <div class="form-floating mt-2">
                                <input type="number" class="form-control" id="Salary" placeholder="Salary" min="0"
