@page
@model AutoArsenal_App.Pages.Account.AccessDeniedModel
@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Denied Access";
}

<div class="container py-5 my-5">
    <div class="row justify-content-center my-5">
        <div class="col-md-6">
            <div class="text-center">
                <i class="fas fa-exclamation-triangle fa-5x text-danger"></i>
                <h1 class="mt-3">Access Denied</h1>
                <p class="lead">You are not authorized to view this page with the role assigned to your account.</p>
                @if (User.IsInRole("Manager"))
                {
                    <a asp-area="" asp-page="/Dashboards/MDashboard" class="btn btn-primary">Home</a>
                }
                else if (User.IsInRole("Cashier"))
                {
                    <a asp-area="" asp-page="/Dashboards/CDashboard" class="btn btn-primary">Home</a>
                }
                else
                {
                    <a asp-area="" asp-page="/Account/Login" class="btn btn-primary">Login</a>
                }
            </div>
        </div>
    </div>
</div>
